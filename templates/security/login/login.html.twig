{% extends 'security/base.html.twig' %}

{% block body %}
    <div class="w-lg-600px p-10 p-lg-15 mx-auto">
        <form action="{{ path('login') }}" class="form w-100" id="kt_sign_up_form" method="post">
            <div class="mb-10 text-center">
                <h1 class="mb-3">Connexion</h1>
                <div class="text-gray-400 fw-semibold fs-4">Pas de compte ?
                    <a href="{{ path('register') }}" class="link-primary fw-bold">Cr√©er mon compte ici</a></div>
            </div>

            {{ component('Flash', {'errors': errors is defined ? errors : []}) }}

            <div class="fv-row mb-7">
                <label class="form-label fw-bold fs-6">Email</label>
                <input class="form-control form-control-lg form-control-solid"
                       type="text"
                       placeholder=""
                       name="_email"
                       autocomplete="off"
                       required/>
            </div>

            <div class="fv-row" data-kt-password-meter="true">
                <div class="mb-1">
                    <label class="form-label fw-bold fs-6">Mot de passe</label>
                    <div class="position-relative mb-3">
                        <input class="form-control form-control-lg form-control-solid"
                               type="password"
                               placeholder=""
                               name="_password"
                               autocomplete="off"
                               required/>
                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                              data-kt-password-meter-control="visibility">
                            <i class="fa-solid fa-eye-slash fs-2"></i>
                            <i class="fa-solid fa-eye fs-2 d-none"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="fv-row mb-10">
                <label class="form-check form-check-custom form-check-solid form-check-inline">
                    <input class="form-check-input"
                           type="checkbox"
                           name="_remember_me"/>
                    <span class="form-check-label fw-semibold fs-6">Se souvenir de moi</span>
                </label>
            </div>

            <input hidden="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                    <span>Connexion</span>
                </button>
            </div>
        </form>
    </div>
{% endblock %}