{% extends 'security/base.html.twig' %}

{% block body %}
    <div class="w-lg-600px p-10 p-lg-15 mx-auto">
        <form action="{{ path('register') }}" class="form w-100" method="post">
            <div class="mb-10 text-center">
                <h1 class="mb-3">Créer mon compte</h1>
                <div class="text-gray-400 fw-semibold fs-4">Déjà un compte ?
                    <a href="{{ path('login') }}" class="link-primary fw-bold">Se connecter ici</a></div>
            </div>

            {{ component('Flash', {'errors': errors is defined ? errors : []}) }}

            <div class="fv-row mb-7">
                <label class="form-label fw-bold fs-6">Login</label>
                <input class="form-control form-control-lg form-control-solid"
                       type="text"
                       value="{{ form.username.vars.data }}"
                       name="{{ form.username.vars.full_name }}"
                       placeholder="{{ form.username.vars.attr.placeholder }}"
                       autocomplete="off"
                       required/>
                {{ form_errors(form.username) }}
            </div>

            <div class="fv-row mb-7">
                <label class="form-label fw-bold fs-6">Email</label>
                <input class="form-control form-control-lg form-control-solid"
                       type="email"
                       value="{{ form.email.vars.data }}"
                       name="{{ form.email.vars.full_name }}"
                       placeholder="{{ form.email.vars.attr.placeholder }}"
                       autocomplete="off"
                       required/>
                {{ form_errors(form.email) }}
            </div>
            <div class="mb-10 fv-row" data-kt-password-meter="true">
                <div class="mb-1">
                    <label class="form-label fw-bold fs-6">Mot de passe</label>
                    <div class="position-relative mb-3">
                        <input class="form-control form-control-lg form-control-solid" type="password"
                               name="{{ form.password.first.vars.full_name }}"
                               placeholder="{{ form.password.first.vars.attr.placeholder }}"
                               autocomplete="off"
                               required
                               value=""/>
                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                              data-kt-password-meter-control="visibility">
                            <i class="fa-solid fa-eye-slash fs-2"></i>
                            <i class="fa-solid fa-eye fs-2 d-none"></i>
                        </span>
                    </div>
                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                    </div>
                </div>
                <div class="text-muted">Utilisez 10 caractères ou plus avec un mélange de lettres, de chiffres et de
                    symboles.</div>
                {{ form_errors(form.password.first) }}
            </div>
            <div class="fv-row mb-5">
                <label class="form-label fw-bold fs-6">Confirmer le mot de passe</label>
                <input class="form-control form-control-lg form-control-solid"
                       type="password"
                       name="{{ form.password.second.vars.full_name }}"
                       placeholder="{{ form.password.second.vars.attr.placeholder }}"
                       autocomplete="off"
                       value=""
                       required/>
            </div>
            <div class="fv-row mb-10">
                <label class="form-check form-check-custom form-check-solid form-check-inline">
                    <input class="form-check-input"
                           type="checkbox"
                           name="{{ form.toc.vars.full_name }}"
                           {% if form.toc.vars.value == 1 %}checked{% endif %}
                           value="{{ form.toc.vars.data }}"
                           required/>
                    <span class="form-check-label fw-semibold fs-6">J'accepte les
                        <a href="#" class="ms-1 link-primary">termes et conditions</a>.
                    </span>
                </label>
            </div>

            <input type="hidden"
                   id="{{ form._token.vars.id }}"
                   name="{{ form._token.vars.full_name }}"
                   value="{{ form._token.vars.data }}"/>

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                    <span>Créer mon compte</span>
                </button>
            </div>
        </form>
    </div>
{% endblock %}